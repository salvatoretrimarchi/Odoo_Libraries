<odoo>
    <data>

        <record id="account_invoice_txt_view" model="ir.ui.view">
            <field name="name">account.invoice.txt.form</field>
            <field name="model">account.invoice.txt</field>
            <field name="arch" type="xml">
                <!--<form string="Txt">-->
                    <!--<field name="txt_filename" invisible="1"/>-->
                    <!--<button name="generate_file" type="object" string="Generate file"/>-->
                    <!--<h2>Txt Generado</h2>-->
                    <!--<p>El archivo es:-->
                        <!--<field name="txt_binary" filename="txt_filename"/>-->
                    <!--</p>-->
                    <!--<footer>-->
                        <!--<button string="Confirm Invoices" name="close" type="object" default_focus="1" class="btn-primary"/>-->
                        <!--<button string="Cancel" class="btn-secondary" special="cancel"/>-->
                    <!--</footer>-->
                <!--</form>-->
                <form string="TXT">
                    <field name="state" invisible="1"/>
                    <field name="txt_filename" invisible="1"/>
                    <group states="choose" string="Generar TXT">
                        <div>
                            <h2 style="color:blue;">Are you sure to print report?</h2>
                        </div>
                        <footer states="choose">
                            <button name="generate_file" string="Generar" type="object" class="oe_highlight"/>
                            Or
                            <button string="Cancel" special="cancel" class="oe_link"/>
                        </footer>
                    </group>
                    <div states="get">
                        <h2>Report Generated</h2>
                        <p>Here is the Excel Report:
                            <field name="txt_binary" readonly="1" filename="txt_filename"/>
                        </p>
                    </div>
                    <footer states="get">
                        <button string="Close" special="cancel" class="oe_link"/>
                    </footer>

                </form>
            </field>
        </record>

        <act_window id="action_account_invoice_txt"
                    multi="True"
                    key2="client_action_multi"
                    name="Generate TXT"
                    res_model="account.invoice.txt"
                    src_model="account.invoice"
                    view_mode="form,tree"
                    target="new"
                    view_type="form"/>

    </data>
</odoo>